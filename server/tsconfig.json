{
  "compilerOptions": {
  "module": "commonjs",
  "esModuleInterop": true,
  "target": "es5",
  "noImplicitAny": true,
  "moduleResolution": "node",
  "removeComments": true,
  "outDir": "dist",
  "strict": true,
  "noUnusedLocals": true,
  "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
